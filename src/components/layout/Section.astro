---
interface Props {
  id?: string;
  class?: string;
  background?: 'white' | 'cream' | 'dark';
}

const { id, class: className, background = 'white' } = Astro.props;

const backgroundClasses = {
  white: 'bg-white-warm',
  cream: 'bg-cream',
  dark: 'bg-black text-white-warm'
};
---

<section
  id={id}
  class={`${backgroundClasses[background]} ${className || ''}`}
>
  <slot />
</section>

