---
import '../styles/global.css';
import '../styles/globals.css';
import '../styles/sprites.css';

interface Props {
  title?: string;
}

const {
  title = 'Panel de Administración | San Mateo Longboard Festival'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://sanmateolongfest.com');
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content="Panel de administración - San Mateo Longboard Festival" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto+Condensed:wght@400;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-cream">
    <slot />
  </body>
</html>

